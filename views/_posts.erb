
<div id="posts" class="span-15">
  <% @posts.each do |post| %>
    <div class="post">
      <strong><%= link_to_user(post.user) %></strong>
      <%= display_post(post) %>
      <div class="date">
        <%= time_ago_in_words(post.created_at) %>
      </div>
    </div>
  <% end %>
  <% if @posts.empty? %>
    <%= t.site.no_posts %>
  <% else %>
    <%= link_to("<i>#{t.site.older} >></i>","timeline/#{@page+1}") %>
  <% end %>
</div>
