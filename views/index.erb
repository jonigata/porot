
<%= erb :header %>

<div class="span-16" id="maincol">
  <div id="updateform" class="box">
    <% if @posting_error %>
      <div class="error">
        <%= @posting_error %>
      </div>
    <% end %>
    <form action="<%=link_text("post")%>" method="post">
      <%= t.site.name_prefix %><%= @logged_in_user.username %><%= t.site.name_suffix %><%= t.site.query %> <br />
      <textarea name="content" rows="3" columns="70"></textarea><br />
      <input type="submit" value="Post">
    </form>
  </div>
  <%= @page=1; erb :_posts %>
  
</div>

<div class="span-7 last" id="rightcol">
  <div class="span-7 box">
    <% followers = @logged_in_user.followers %>
    <h4><%= pluralize(t.site.follower_prefix, t.site.follower_prefix_plural, followers.length) %></h4>
    <%= erb :_user_list, :locals => {:users => followers } %>
  </div>
  <div class="span-7 box">
    <% followees = @logged_in_user.followees %>
    <h4><%= pluralize(t.site.followee_prefix, t.site.followee_prefix_plural, followees.length) %></h4>
    <%= erb :_user_list, :locals => {:users => followees } %>
  </div>
</div>


<%= erb :footer %>
